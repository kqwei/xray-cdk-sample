{
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "target": "es2021",
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "*": [
        "./lambda/layers/common-layer/nodejs/*",
        "./lambda/layers/common-layer/nodejs/node_modules/@types/*",
        "./lambda/layers/common-layer/nodejs/node_modules/*"
      ]
    },
    "baseUrl": "./",
    "rootDir": ".",
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}